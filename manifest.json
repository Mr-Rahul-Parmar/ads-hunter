{
    "name": "Ads Hunter",
    "description": "Blocks ads on any website",
    "manifest_version": 2,
    "version": "1.0.0",
    "background": {
        "scripts": ["scripts/blockedsites.js", "scripts/script.js"]
    },
    "icons": {
        "128"   : "images/logo.png"
    },
    "browser_action": {
      "default_icon": "images/logo.png",
      "default_popup": "popup.html",
      "default_title": "My Chrome google Extension"
    },
    "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/", "storage"]
}